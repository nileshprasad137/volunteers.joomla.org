<?xml version="1.0" encoding="utf-8"?>
<form>
    <field
            name="firstname"
            type="text"
            class="input-large input-large-text"
            label="COM_VOLUNTEERS_FIELD_FIRSTNAME"
            required="true"
    />

    <field
            name="lastname"
            type="text"
            class="input-large input-large-text"
            label="COM_VOLUNTEERS_FIELD_LASTNAME"
            required="true"
    />

    <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            hint="JFIELD_ALIAS_PLACEHOLDER"
    />

    <fieldset
            name="item"
            addfieldpath="/administrator/components/com_volunteers/models/fields"
    >
        <field
                name="email"
                type="text"
                label="COM_VOLUNTEERS_FIELD_EMAIL"
                required="true"
                autocomplete="off"
        />

        <field
                name="password1"
                type="password"
                autocomplete="off"
                class="validate-password"
                field="password1"
                filter="raw"
                label="COM_USERS_PROFILE_PASSWORD1_LABEL"
                size="30"
                validate="password"
        />

        <field
                name="password2"
                type="password"
                autocomplete="off"
                class="validate-password"
                field="password1"
                filter="raw"
                label="COM_USERS_PROFILE_PASSWORD2_LABEL"
                message="COM_USERS_PROFILE_PASSWORD1_MESSAGE"
                size="30"
                validate="equals"
        />


        <field
                name="user_id"
                type="user"
                label="COM_VOLUNTEERS_FIELD_SELECT_USER"
                filter="unset"
        />

        <field
                name="country"
                type="countries"
                label="COM_VOLUNTEERS_FIELD_COUNTRY"
                required="true"
                class="location-country location"
        />

        <field
                name="city"
                type="text"
                label="COM_VOLUNTEERS_FIELD_CITY"
                class="location-city location"
        />

        <field
                name="location"
                type="location"
                label="COM_VOLUNTEERS_FIELD_LOCATION"
        />

        <field
                addfieldpath="plugins/content/perfectimage/field"
                name="image"
                type="perfectimage"
                ratio="1/1"
                width="250"
                label="COM_VOLUNTEERS_FIELD_IMAGE"
        />

        <field
                name="website"
                type="text"
                label="COM_VOLUNTEERS_FIELD_WEBSITE"
        />

        <field
                name="github"
                type="textprepend"
                label="COM_VOLUNTEERS_FIELD_GITHUB"
                prepend="COM_VOLUNTEERS_FIELD_GITHUB_URL"
        />

        <field
                name="twitter"
                type="textprepend"
                label="COM_VOLUNTEERS_FIELD_TWITTER"
                prepend="COM_VOLUNTEERS_FIELD_TWITTER_URL"
        />

        <field
                name="facebook"
                type="textprepend"
                label="COM_VOLUNTEERS_FIELD_FACEBOOK"
                prepend="COM_VOLUNTEERS_FIELD_FACEBOOK_URL"
        />

        <field
                name="googleplus"
                type="textprepend"
                label="COM_VOLUNTEERS_FIELD_GOOGLEPLUS"
                prepend="COM_VOLUNTEERS_FIELD_GOOGLEPLUS_URL"
        />

        <field
                name="linkedin"
                type="textprepend"
                label="COM_VOLUNTEERS_FIELD_LINKEDIN"
                prepend="COM_VOLUNTEERS_FIELD_LINKEDIN_URL"
        />

        <field
                name="intro"
                type="textarea"
                rows="4"
                class="span12"
                label="COM_VOLUNTEERS_FIELD_INTRO"
        />

        <field
                name="joomlastory"
                type="editor"
                buttons="false"
                filter="JComponentHelper::filterText"
                label="COM_VOLUNTEERS_FIELD_JOOMLASTORY"
        />

        <field
                name="birthday"
                type="calendar"
                label="COM_VOLUNTEERS_FIELD_BIRTHDAY"
                format="%b-%d"
        />
    </fieldset>

    <fieldset
            name="details"
    >
        <field
                name="id"
                type="text"
                default="0"
                label="JGLOBAL_FIELD_ID_LABEL"
                readonly="true"
                class="readonly"
                description="JGLOBAL_FIELD_ID_DESC"
        />

        <field
                name="state"
                type="list"
                label="JSTATUS"
                class="chzn-color-state"
                default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_FIELD_CREATED_LABEL"
                description="JGLOBAL_FIELD_CREATED_DESC"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                description="JGLOBAL_FIELD_CREATED_BY_DESC"
        />

        <field
                name="modified"
                type="calendar"
                class="readonly"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                readonly="true"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                class="readonly"
                readonly="true"
                filter="unset"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

        <field
                name="notes"
                type="textarea"
                rows="6"
                label="COM_VOLUNTEERS_FIELD_NOTES_INTERNAL"
        />
    </fieldset>

    <field
            name="latitude"
            type="hidden"
    />

    <field
            name="longitude"
            type="hidden"
    />
</form>
